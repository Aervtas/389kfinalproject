<h1>Welcome</h1>
<div class="row">
  <div class="column" id="gameCol">
    <input type="text" id="SearchGame" placeholder="Enter a Game">
    <br>
    {{#each gdata}}
    <article class="garticle_container">
      <h2 class="title">{{this.title}}</h2>
      <h4 class="name">By: {{this.company}}, {{this.year}}</h4>
      <hr>
      <div class="tags">
        {{this.genre}}
      </div>
    </article>
    {{else}}
    <article>
      <h1>There are no game reviews yet.</h1>
      <a href="/addReview">Write your first review!</a>
    </article>
    {{/each}}
  </div>
  <div class="column" id="musicCol">
    <input type="text" id="SearchMusic" placeholder="Enter a Music">
    <br>
    {{#each mdata}}
    <article class="marticle_container">
      <h2 class="title">{{this.title}}</h2>
      <h4 class="name">By: {{this.composer}}, {{this.year}}</h4>
      <hr>
      <div class="tags">
        {{this.genre}}
      </div>
    </article>
    {{else}}
    <article>
      <h1>There are no music reviews yet.</h1>
      <a href="/addReview">Write your first review!</a>
    </article>
    {{/each}}
  </div>
</div>
